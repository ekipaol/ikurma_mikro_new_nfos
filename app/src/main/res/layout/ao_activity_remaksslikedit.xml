<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/toolbar_height_default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Bank}"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorBlackHeader"
                        android:background="@color/colorBackgroundGrey1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plafond"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_plafond"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Plafond}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Outstanding"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_outstanding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Outstanding}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Angsuran"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_angsuran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Angsuran}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Mulai"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_tanggalmulai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Tanggal Mulai}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Jatuh Tempo"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_tanggaljatuhtempo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Tanggal Jatuh Tempo}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kolektabilitas"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_kolektabilitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Kolektabilitas}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="{Status}"
                            android:textSize="13sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Remaks"
                            android:layout_weight="1"
                            android:textSize="12sp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/sp_remaks"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/forminput_cardwhite"
                                android:gravity="center_vertical"
                                android:spinnerMode="dialog"
                                android:textDirection="ltr"
                                android:textSize="13sp"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.95"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bukti_lunas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Foto Bukti Lunas"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlackHeader"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="170dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/iv_foto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:riv_border_width="1dip"
                                app:riv_border_color="#f1efef"
                                app:riv_corner_radius="8dip"
                                android:layout_gravity="center"
                                android:src="@drawable/banner_placeholder"
                                android:layout_centerInParent="true"/>

                            <ImageView
                                android:id="@+id/btn_foto"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/ic_photo_camera_primary_24dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:padding="4dp"
                                android:background="@drawable/button_reject"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_btn_send"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorWhite"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_primary"
                    android:text="Simpan Remarks SLIK"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/toolbar_nosearch"/>
    <include layout="@layout/loading"/>
</RelativeLayout>