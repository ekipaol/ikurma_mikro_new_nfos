<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_remaks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="12dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Bank}"
                android:textStyle="bold"
                android:padding="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/colorBlackHeader"
                android:background="@color/colorBackgroundGrey1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plafond"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_plafond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Plafond}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outstanding"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_outstanding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Outstanding}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Angsuran"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_angsuran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Angsuran}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Mulai"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_tanggalmulai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Tanggal Mulai}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Jatuh Tempo"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_tanggaljatuhtempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Tanggal Jatuh Tempo}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kolektabilitas"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_kolektabilitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Kolektabilitas}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Status}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remaks"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_remaks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Remaks}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bukti_lunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foto Bukti Lunas"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:riv_border_width="1dip"
                    app:riv_border_color="#f1efef"
                    app:riv_corner_radius="8dip"
                    android:layout_gravity="center"
                    android:src="@drawable/banner_placeholder"
                    android:layout_centerInParent="true"
                    android:elevation="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>