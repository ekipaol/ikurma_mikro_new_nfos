<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.bris.ikurma.view.corelayout.login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFCFB"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_top_login"/>

                    <ImageView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginTop="-90dp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <EditText

                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/shapeemail"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"
                    android:padding = "15dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="@color/colorBlackHeader"
                    android:textColorHint="@color/fontFormHint"
                    android:drawableTint="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="6dp"
                    android:padding="15dp"
                    android:background="@drawable/shapeemail"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:textColor="@color/colorBlackHeader"
                    android:textColorHint="@color/fontFormHint"
                    android:textColorHighlight="@color/colorBlackHeader"
                    android:inputType="textPassword"
                    android:drawableTint="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="24dp">

                    <CheckBox
                        android:id="@+id/cb_rememberme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:layoutDirection="rtl"
                        android:padding="10dp"
                        android:text="Remember Me"
                        android:textColor="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:shadowColor="@color/colorBackgroundTransparent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/shapelogin"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_bottom_login"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/loadingfull"/>


</androidx.constraintlayout.widget.ConstraintLayout>