<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/cb_agunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/button_checkbox"
            android:layout_weight="1.5"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:enabled="false"/>


        <TextView
            android:id="@+id/tv_agunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="{Title Agunan}"
            android:fontFamily="@font/muli_b"
            android:textColor="@color/fontFormHint"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_agunan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_placeholder"
            app:riv_border_width="1dip"
            app:riv_border_color="#f1efef"
            app:riv_corner_radius="8dip"
            android:layout_weight="1.5"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_agunan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapegrey"
        android:hint="Nomor Dokumen"
        android:textSize="12sp"
        android:inputType="text"
        android:textColor="#000"
        android:maxLength="30"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:enabled="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/placholderBg"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>

