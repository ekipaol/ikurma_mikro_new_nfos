                        <TextView
                            android:id="@+id/tv_nik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{NIK}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_name"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Nama}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_birthplace"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempat Lahir"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_tempatlahir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Tempat Lahir}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_birthdate"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Lahir"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_tanggallahir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Tanggal Lahir}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor HP"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_nomorhp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Nomor HP}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_typejob"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:id="@+id/label_jenisusaha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Usaha"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_jenisusaha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Jenis Usaha}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_salary"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:id="@+id/label_pendapatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Omset per Bulan"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_pendapatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Pendapatan}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_dataalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Alamat Usaha / Kantor"
                        android:textSize="18dp"
                        android:paddingBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_address"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Alamat}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_district"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kecamatan"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_kecamatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Kecamatan}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_city"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kota"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_kota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Kota}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_province"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Provinsi"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_provinsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Provinsi}"
