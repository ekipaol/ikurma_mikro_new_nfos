<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackgroundGrey1">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhite"
            app:expandedTitleMarginStart="12dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_placeholder"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height_default"
                android:id="@+id/tb_custom"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ico_leftarrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:id="@+id/tv_page_title"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/muli_b"
                        android:gravity="center"
                        android:text="{Title Bar}"
                        android:textColor="@color/colorBlackHeader"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/btn_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="12dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_edit_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_datapembiayaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Pembiayaan"
                        android:textSize="18dp"
                        android:paddingBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_segmen"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Segmen"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/tv_segmen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Segmen}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_product"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Produk"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_produk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Produk}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_program"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_programs"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Program"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_program"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Program}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_plafond"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plafond"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_plafond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Plafond}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_tenor"
                            android:tint="@color/colorPrimary"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tenor"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"/>

                        <TextView
                            android:id="@+id/tv_tenor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Tenor}"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_detail"
                            android:textColor="@color/colorBlackHeader"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
