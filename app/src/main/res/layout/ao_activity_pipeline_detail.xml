                        android:textSize="18dp"
                        android:paddingBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="15dp">
