<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="3dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemutus"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_namapemutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Nama Pemutus}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jabatan Pemutus"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_jabatanpemutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Jabatan Pemutus}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Putusan Pemutus"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_putusanpemutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Putusan Pemutus}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Putusan"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_jenisputusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Jenis Putusan}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:background="#f7f7f7">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Catatan"
                        android:gravity="center"
                        android:padding="4dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy"
                        android:textSize="11sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shapeborderprimary"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catatan"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:justificationMode="inter_word"
                    android:textColor="@color/colorBlackHeader"/>

            </LinearLayout>

            </LinearLayout>
    </androidx.cardview.widget.CardView>